@model RealEstateMvc5.Rentals.Rental

@{
    ViewBag.Title = "Adjust Price";
}

<h2>AdjustPrice</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})

        <div class="form-group">
            <label class="control-label col-md-2">Description</label>
            <div class="col-md-10">
                @Model.Description
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Description</label>
            <div class="col-md-10">
                @Model.Price
            </div>
        </div>

        <div class="form-group">
            @Html.Label("AdjectPrice","Adjust Price", new {@class="col-md-2"})
            <div class="col-md-10">
                @Html.TextBox("NewPrice")
            </div>
        </div>
        
        <div class="form-group">
            @Html.Label("Reason", new {@class="control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextArea("Reason")
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adjust" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
